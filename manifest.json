{
	"manifest_version": 2,
	"name": "You Mean Racist?",
	"description": "Replace the phrase 'racially charged' with the more oft-accurate term 'racist.'",
	"version": "1.2",
	"icons": {
		"128":"icon128.png", 
		"48": "icon48.png"
	},
	"browser_action": {
		"default_icon": "icon128.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["content.js"]
    }],
	"permissions": [
		"activeTab"
	]
}

